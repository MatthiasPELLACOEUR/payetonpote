{% extends 'base.html.twig' %}

{% block title %}Campaign{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1 class="center">Campaign {{ campaign.title }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ campaign.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ campaign.title }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ campaign.content }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ campaign.createdAt ? campaign.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ campaign.updatedAt ? campaign.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Goal</th>
                    <td>{{ campaign.goal }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ campaign.name }}</td>
                </tr>
            </tbody>
        </table>

        {{ include('campaign/_delete_form.html.twig') }}
        <a class="btn green right" href="{{ path('campaign_edit', {'id': campaign.id}) }}">edit</a>
        
        
        <a href="{{ path('campaign_index') }}">back to list</a>
    </div>
</div>
{% endblock %}
